<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      href="https://use.fontawesome.com/releases/v5.0.6/css/all.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/styles.css" />
    <title>Twitter / Home</title>
  </head>

  <body class="d-flex bg-black">
    <div
      class="
        d-flex
        flex-row
        container-xl
        position-relative
        flex-shrink-0
        justify-content-center
        px-0
      "
    >
      <div class=""><%- include('component/left-sidebar') -%></div>

      <div class="d-flex flex-column bg-black border border-dark flex-grow-1">
        <div
          class="
            sticky-top
            flex-fill
            border-top border-bottom border-dark
            bg-black
            px-3
            py-1
            d-flex
            flex-row
            align-items-center
          "
        >
          <span class="text-white w-100 fs-4 fw-bold">Latest Tweets</span>
          <a href="/" class="post-link fs-5"><i class="fal fa-stars"></i></a>
        </div>
        <div
          class="
            d-flex
            flex-row
            text-white
            border-bottom border-dark
            p-3
            bg-black
            flex-fill
          "
        >
          <div
            class="rounded-circle bg-dark"
            style="
              width: 50px;
              height: 50px;
              background-repeat: no-repeat;
              background-size: cover;
              background-image: url('/img/avatar_img/<%- user.avatar %>');
            "
          ></div>
          <form
            class="d-flex flex-column ms-3 flex-fill"
            method="POST"
            action="/tweet"
          >
            <textarea
              name="content"
              id="content"
              rows="2"
              class="content w-100 bg-black border-0 fs-5 text-white"
              placeholder="What's Happening?"
              maxlength="140"
            ></textarea>
            <div class="d-flex flex-column flex-sm-row align-items-center">
              <div class="d-flex flex-row flex-fill">
                <a href="/" class="post-link fs-5"
                  ><i class="far fa-image"></i
                ></a>
                <a href="/" class="post-link fs-5"
                  ><i class="fal fa-poll-h"></i
                ></a>
                <a href="/" class="post-link fs-5"
                  ><i class="fal fa-smile"></i
                ></a>
                <a href="/" class="post-link fs-5 d-none d-md-block"
                  ><i class="fal fa-sticky-note"></i
                ></a>
              </div>
              <button
                type="submit"
                class="btn btn-twitter-primary rounded-pill fw-bold px-3"
              >
                Tweet
              </button>
            </div>
          </form>
        </div>
        <div class="divider border-bottom border-dark"></div>
        <!-- Tweet Feed -->
        <% tweetsData.forEach(tweet => { %>
        <div
          class="
            d-flex
            flex-row
            text-white
            border-bottom border-dark
            px-3
            py-2
            bg-black
          "
        >
          <img
            src="/img/avatar_img/<%- tweet.user.avatar %>"
            class="rounded-circle bg-dark"
            style="width: 50px; height: 50px"
            alt="avatar"
          />
          <div class="d-flex flex-column ms-3 w-100">
            <div class="d-flex flex-column bg-black">
              <div
                class="
                  d-flex
                  flex-row
                  text-dark
                  align-items-center
                  flex-grow-1
                  w-100
                "
              >
                <div class="w-100 flex-grow-1">
                  <span class="text-white fw-bold me-1"
                    ><%- tweet.user.firstname %></span
                  ><span class="text-dark fs-6"
                    >@<%- tweet.user.username %> Â· <%=
                    moment(tweet.createdAt).locale("en").format("LLL"); %></span
                  >
                </div>
                <div class="dropdown">
                  <a
                    href="#"
                    class="post-opt"
                    id="dropdownUser2"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                    ><i class="far fa-ellipsis-h fs-4"></i
                  ></a>
                  <ul
                    class="
                      dropdown-menu
                      bg-black
                      dropdown-shadow
                      text-small
                      myshadow
                      w-100
                    "
                    aria-labelledby="dropdownUser2"
                  >
                    <% if (user.id === tweet.user.id) { %>
                    <li>
                      <a
                        class="dropdown-item text-danger"
                        href="/eliminar/<%= tweet._id %>"
                        >Delete</a
                      >
                    </li>
                    <% } %>
                    <li>
                      <a
                        class="dropdown-item text-twitter"
                        href="/follow/<%= tweet.user.id %>"
                        >Follow</a
                      >
                    </li>
                  </ul>
                </div>
              </div>
              <div class="fw-light w-100"><%= tweet.content %></div>
            </div>

            <div
              class="
                d-flex
                flex-row
                align-items-center
                justify-content-between
                flex-fill
              "
            >
              <a
                href="/"
                class="link-comment d-flex flex-row align-items-center"
                ><i class="fal fa-comment"></i
                ><span class="ms-1 fs-8">0</span></a
              >
              <a
                href="/"
                class="link-retweet d-flex flex-row align-items-center"
                ><i class="fal fa-retweet"></i
                ><span class="ms-1 fs-8">0</span></a
              >
              <a
                href="/like/<%- tweet.id %> "
                class="link-like d-flex flex-row align-items-center"
                ><i class="fal fa-heart"></i
                ><span class="ms-1 fs-8"><%= tweet.likes.length %></span></a
              >
              <a
                href="/"
                class="
                  link-share
                  d-flex
                  flex-row
                  align-items-center
                  d-none d-md-block
                "
                ><i class="fal fa-share-square"></i
              ></a>
              <div class="">&nbsp;</div>
            </div>
          </div>
        </div>
        <% }) %>
        <div class="vh-100"></div>
      </div>
      <div class=""><%- include('component/right-sidebar') -%></div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

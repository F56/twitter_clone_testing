<div
  class="modal fade"
  id="modalTweet"
  tabindex="-1"
  aria-labelledby="modalTweet"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4 shadow-none bg-black">
      <div
        class="
          modal-body
          bg-black
          rounded-4
          shadow-none
          border-0
          d-flex
          flex-column
          px-0
        "
      >
        <div class="border-bottom border-dark text-white py-1 px-3">
          <i class="fal fa-times fs-3"></i>
        </div>
        <div class="d-flex flex-row text-white p-3 bg-black flex-fill">
          <div
            class="rounded-circle bg-dark"
            style="
              width: 50px;
              height: 50px;
              background-repeat: no-repeat;
              background-size: cover;
              background-image: url('<%- user.avatar %>');
            "
          ></div>
          <form
            class="d-flex flex-column ms-3 flex-fill"
            method="POST"
            action="/tweet"
          >
            <textarea
              name="content"
              id="content"
              rows="2"
              class="content w-100 bg-black border-0 fs-5 text-white"
              placeholder="What's Happening?"
              maxlength="140"
            ></textarea>
            <div class="d-flex flex-column flex-sm-row align-items-center">
              <div class="d-flex flex-row flex-fill">
                <a href="/" class="post-link fs-5"
                  ><i class="far fa-image"></i
                ></a>
                <a href="/" class="post-link fs-5"
                  ><i class="fal fa-poll-h"></i
                ></a>
                <a href="/" class="post-link fs-5"
                  ><i class="fal fa-smile"></i
                ></a>
                <a href="/" class="post-link fs-5 d-none d-md-block"
                  ><i class="fal fa-sticky-note"></i
                ></a>
              </div>
              <button
                type="submit"
                class="btn btn-twitter-primary rounded-pill fw-bold px-3"
              >
                Tweet
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
